<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyHiskioCourse" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="buttonTextColor">#4CAF50</item>
        <item name="buttonTextSize">50sp</item>
    </style>

    <!-- 自訂Attr -->
    <style name="customButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/buttonTextColor</item>
        <item name="android:textSize">?attr/buttonTextSize</item>
    </style>

    <!-- 自訂主題 -->
    <style name="CustomTheme1" parent="Theme.MyHiskioCourse">
        <item name="buttonTextColor">#FFFF00</item>
        <item name="buttonTextSize">20sp</item>
    </style>

    <style name="CustomTheme2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="buttonTextColor">#FF0000</item>
        <item name="buttonTextSize">30sp</item>
    </style>

    <!-- 自訂style -->
    <style name="ButtonStyle">
        <item name="textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/btn_color</item>
    </style>

    <style name="ButtonStyleA" parent="ButtonStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>